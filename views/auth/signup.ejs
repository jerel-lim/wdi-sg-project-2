<% include ../static/header %>

<form action="/signup" method="POST">
  <div class="form-group">
    <label for="authName">Name</label>
    <input id="authName" class="form-control" type="text" name="name" placeholder="Name">
  </div>

  <div class="form-group">
    <label for="authEmail">Email</label>
    <input id="authEmail" class="form-control" type="email" name="email" placeholder="Email">
  </div>

  <div class="form-group">
    <label for="authPassword">Password</label>
    <input id="authPassword" class="form-control" type="password" name="password" placeholder="Password">
  </div>

  <div class="form-group">
    <label for="authAdminKey">Admin Key(if any)</label>
    <input id="authAdminKey" class="form-control" type="password" name="adminKey" placeholder="Admin Key">
  </div>

  <input class="btn btn-primary" type="submit">
</form>
