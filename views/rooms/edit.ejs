

<% include ../static/header %>

<div class="container">
  <table class="table">
    <tr>
      <th>Bedrooms</th>
      <th>Price/day</th>
      <th>From</th>
      <th>To</th>
      <th></th>
      <th></th>
    </tr>
      <tr>
      <td><%- roomToEdit.beds %></td>
      <td><%- roomToEdit.price %></td>
      <td><%- roomToEdit.dateFrom %></td>
      <td><%- roomToEdit.dateTo %></td>
      </tr>
  </table>

  Update above <%=roomToEdit.beds%> bed room reservation duration to :
</br>
</br>
<div class="container">
  <form action=<%= "/rooms/" + roomToEdit.id + "?_method=PUT" %> method="POST">
    <div class="form-group">
      <label for="dateFrom">From Date (required)</label>
      <input type="date" class="form-control" id="fromInput" placeholder="mm/dd/yyyy" name="dateFrom">
    </div>
    <div class="form-group">
      <label for="dateTo">To Date (required)</label>
      <input type="date" class="form-control" id="toInput" placeholder="mm/dd/yyyy" name="dateTo">
    </div>
    <input type='hidden' name='originalStart' value='<%= roomToEdit.dateFrom%>' >
    <input type='hidden' name='originalEnd' value='<%= roomToEdit.dateTo%>' >
    <button type="submit" class="btn btn-primary"><span class = "glyphicon glyphicon-edit"></span>Update Reservation</button>
  </form>
</div>
